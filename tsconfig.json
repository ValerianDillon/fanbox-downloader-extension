{
  "compilerOptions": {
    "target": "es2017",
    "module": "es2015",
    "outDir": "./dist/",
    "lib": ["dom", "es2021"],
    "removeComments": true,
    "strict": true,
    "noExplicitAny": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["**/*.test.ts", "dist/**/*"]
}
