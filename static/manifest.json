{
  "manifest_version": 3,
  "name": "FANBOX Downloader",
  "version": "1.0.0",
  "description": "pixiv FANBOX の投稿を ZIP として一括ダウンロード",
  "permissions": [],
  "host_permissions": ["*://*.fanbox.cc/*"],
  "content_scripts": [
    {
      "matches": ["*://*.fanbox.cc/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "service-worker.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
